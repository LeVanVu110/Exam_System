<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Tooltip?>


<HBox prefHeight="60.0" prefWidth="1024.0" style="-fx-background-color: #00558c;" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.studentapp.controller.HeaderController">
    <children>

        <StackPane minWidth="400.0" prefHeight="60.0" HBox.hgrow="ALWAYS">
            <children>
                <Text fill="WHITE" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Exam Collection System" textAlignment="CENTER" textOrigin="CENTER">
                    <font>
                        <Font name="System Bold" size="26.0"/>
                    </font>
                </Text>
            </children>
        </StackPane>

        <StackPane minWidth="200.0" prefHeight="60.0" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="lblDateTime" alignment="CENTER" text="Time Currently" textAlignment="CENTER"
                       textFill="#dcdada">
                    <font>
                        <Font name="System Bold Italic" size="16.0"/>
                    </font>
                </Label>
            </children>
        </StackPane>

        <AnchorPane minWidth="270.0" prefHeight="60.0" prefWidth="270.0">
            <children>
                <HBox alignment="CENTER_LEFT" layoutX="-1.6" prefHeight="60.0" prefWidth="191.0" spacing="5.0"
                      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="-2.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <Label text="Chào," textFill="WHITE"/>

                        <Label fx:id="lblNameTeacher" maxWidth="155.0" prefHeight="19.0" prefWidth="155.0"
                               text="Tên Giảng Viên Rất Rất Dài" textFill="WHITE" textOverrun="ELLIPSIS">
                            <font>
                                <Font name="System Bold Italic" size="13.0"/>
                            </font>

                            <tooltip>
                                <Tooltip fx:id="tooltipName" text="Tên đầy đủ sẽ hiện ở đây"/>
                            </tooltip>

                        </Label>
                    </children>
                </HBox>

                <Button fx:id="btnLogout" alignment="CENTER" mnemonicParsing="false"
                        style="-fx-background-color: #58ade5; -fx-background-radius: 4;" text="Logout"
                        textAlignment="CENTER" textFill="WHITE" AnchorPane.rightAnchor="15.0"
                        AnchorPane.topAnchor="15.0">
                    <font>
                        <Font name=".VnAvant Bold" size="14.0"/>
                    </font>
                </Button>
            </children>
        </AnchorPane>

    </children>
</HBox>
