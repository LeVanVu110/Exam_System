<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ProgressIndicator?>

<VBox fx:controller="com.example.studentapp.controller.KiemTraCaThiController" 
      spacing="10" alignment="TOP_CENTER" stylesheets="@../../css/styles.css" 
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="DANH SÁCH CA THI HÔM NAY" styleClass="header-title">
            <font><Font name="System Bold" size="24.0" /></font>
        </Label>
        
        <Button text="Làm mới" onAction="#handleRefreshButton" />
        
        <TextField fx:id="roomFilterField" promptText="Nhập tên phòng..."/>
        <Button text="Lọc" onAction="#handleFilterButton" />
        
        <Button text="Xuất File" onAction="#handleExportButton" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
    </HBox>

    <ProgressIndicator fx:id="loadingIndicator" visible="false" />

    <TableView fx:id="tableView" VBox.vgrow="ALWAYS" editable="true">
        <columns>
            <TableColumn fx:id="colMaCaThi" text="Mã Ca Thi" prefWidth="100" />
            <TableColumn fx:id="colTenMonHoc" text="Tên Môn Học" prefWidth="250" />
            
            <TableColumn fx:id="colCanBoCoiThi" text="Cán bộ coi thi" prefWidth="150" />
            <TableColumn fx:id="colPhongThi" text="Phòng Thi" prefWidth="100" />
            <TableColumn fx:id="colNgayThi" text="Ngày Thi" prefWidth="120" />
            <TableColumn fx:id="colGioThi" text="Giờ Thi" prefWidth="100" />
            <TableColumn fx:id="colTrangThai" text="Trạng Thái" prefWidth="120" />
            <TableColumn fx:id="colSoBaiNop" text="Bài Nộp" prefWidth="80" />
            <TableColumn fx:id="colSoMayTrong" text="Máy Trống" prefWidth="80" />

            <TableColumn fx:id="colBienBan" text="Biên bản" prefWidth="120" />
            <TableColumn fx:id="colUpload" text="Nộp Bài" prefWidth="100" />
            </columns>
    </TableView>

</VBox>