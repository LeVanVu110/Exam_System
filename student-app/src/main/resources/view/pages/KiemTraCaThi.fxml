<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ProgressIndicator?>

<VBox fx:controller="com.example.studentapp.controller.KiemTraCaThiController" 
      spacing="10" alignment="TOP_CENTER" stylesheets="@../../css/styles.css" 
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="DANH SÁCH CA THI HÔM NAY" styleClass="header-title">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Button text="Làm mới" onAction="#handleRefreshButton" />
        </HBox>

    <ProgressIndicator fx:id="loadingIndicator" visible="false" />

    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colMaCaThi" text="Mã Ca Thi" prefWidth="100" />
            <TableColumn fx:id="colTenMonHoc" text="Tên Môn Học" prefWidth="250" />
            <TableColumn fx:id="colPhongThi" text="Phòng Thi" prefWidth="100" />
            <TableColumn fx:id="colNgayThi" text="Ngày Thi" prefWidth="120" />
            <TableColumn fx:id="colGioThi" text="Giờ Thi" prefWidth="100" />
            <TableColumn fx:id="colTrangThai" text="Trạng Thái" prefWidth="120" />
        </columns>
    </TableView>

</VBox>