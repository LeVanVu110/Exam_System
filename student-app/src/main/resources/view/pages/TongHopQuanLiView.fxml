<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.example.studentapp.controller.TongHopQuanLyController">
    <children>
        <Label alignment="CENTER" maxWidth="Infinity"
            style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-padding: 15;"
            text="HỆ THỐNG QUẢN LÝ CA THI (PĐT)">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <SplitPane dividerPositions="0.65" VBox.vgrow="ALWAYS">
            <items>
                <VBox spacing="10" style="-fx-padding: 10;">
                    <children>
                        <Label text="Danh sách ca thi">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <TableView fx:id="caThiTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="maHPColumn" prefWidth="100.0" text="Mã Lớp" />
                                <TableColumn fx:id="tenHPColumn" prefWidth="200.0"
                                    text="Tên Học Phần" />
                                <TableColumn fx:id="ngayThiColumn" prefWidth="100.0" text="Ngày thi" />
                                <TableColumn fx:id="caThiColumn" prefWidth="120.0" text="Ca thi" />
                                <TableColumn fx:id="phongThiColumn" prefWidth="80.0" text="Phòng" />
                                <TableColumn fx:id="cbctColumn" prefWidth="150.0"
                                    text="Cán bộ coi thi" />
                                <TableColumn fx:id="trangThaiColumn" prefWidth="100.0"
                                    text="Trạng thái" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <VBox spacing="10" style="-fx-padding: 10;">
                    <children>
                        <Label fx:id="detailTitleLabel" text="Chi tiết ca thi">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                    prefWidth="110.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                    prefWidth="200.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Mã Lớp/HP:" style="-fx-font-weight: bold;" />
                                <TextField fx:id="maHPField" editable="false"
                                    GridPane.columnIndex="1" />

                                <Label text="Tên Học Phần:" style="-fx-font-weight: bold;"
                                    GridPane.rowIndex="1" />
                                <TextField fx:id="tenHPField" editable="false"
                                    GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Ngày Thi:" style="-fx-font-weight: bold;"
                                    GridPane.rowIndex="2" />
                                <TextField fx:id="ngayThiField" editable="false"
                                    GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="Ca Thi (Giờ):" style="-fx-font-weight: bold;"
                                    GridPane.rowIndex="3" />
                                <TextField fx:id="caThiField" editable="false"
                                    GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Label text="Phòng Thi:" style="-fx-font-weight: bold;"
                                    GridPane.rowIndex="4" />
                                <TextField fx:id="phongThiField" editable="false"
                                    GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                <Label text="Cán Bộ Coi Thi:" style="-fx-font-weight: bold;"
                                    GridPane.rowIndex="5" />
                                <TextField fx:id="cbctField" editable="false"
                                    GridPane.columnIndex="1" GridPane.rowIndex="5" />

                                <Label text="Số Lượng SV:" style="-fx-font-weight: bold;"
                                    GridPane.rowIndex="6" />
                                <TextField fx:id="soLuongField" editable="false"
                                    GridPane.columnIndex="1" GridPane.rowIndex="6" />

                                <Label text="Trạng Thái:" style="-fx-font-weight: bold;"
                                    GridPane.rowIndex="7" />
                                <TextField fx:id="trangThaiField" editable="false"
                                    style="-fx-text-fill: red;" GridPane.columnIndex="1"
                                    GridPane.rowIndex="7" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </children>
</VBox>