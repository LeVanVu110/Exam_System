<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../../css/styles.css" styleClass="main-container" spacing="15"
    xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.example.studentapp.controller.LichThiPDTController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>

    <Label text="Form Lịch Thi - Phòng Đào Tạo" styleClass="form-header-title" />

    <GridPane fx:id="formGrid" styleClass="card-style" hgap="10" vgap="12">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
        </columnConstraints>

        <Label text="Mã Ca Thi:" styleClass="form-label" GridPane.rowIndex="0" />
        <TextField fx:id="txtMaCaThi" promptText="Ví dụ: CT101" styleClass="text-field-styled"
            GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Tên Môn Học:" styleClass="form-label" GridPane.rowIndex="1" />
        <TextField fx:id="txtTenMonHoc" promptText="Ví dụ: Lập trình JavaFX"
            styleClass="text-field-styled" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Cán bộ coi thi:" styleClass="form-label" GridPane.rowIndex="2" />
        <TextField fx:id="txtCanBoCoiThi" promptText="Ví dụ: Nguyễn Văn A"
            styleClass="text-field-styled" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Phòng Thi:" styleClass="form-label" GridPane.rowIndex="3" />
        <TextField fx:id="txtPhongThi" promptText="Ví dụ: P101" styleClass="text-field-styled"
            GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Ngày Thi:" styleClass="form-label" GridPane.rowIndex="4" />
        <DatePicker fx:id="dateNgayThi" prefWidth="350.0" styleClass="text-field-styled"
            GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Giờ Thi:" styleClass="form-label" GridPane.rowIndex="5" />
        <TextField fx:id="txtGioThi" promptText="Định dạng HH:mm (ví dụ: 07:30)"
            styleClass="text-field-styled" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="Trạng Thái:" styleClass="form-label" GridPane.rowIndex="6" />
        <ComboBox fx:id="comboTrangThai" prefWidth="350.0" promptText="Chọn trạng thái"
            GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <Button fx:id="btnLuu" onAction="#handleSaveButton" text="Lưu Lịch Thi"
            styleClass="btn-primary-green" GridPane.columnIndex="1" GridPane.rowIndex="7" />

        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
    </GridPane>
</VBox>