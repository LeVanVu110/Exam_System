<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="1200.0"
   xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="com.example.studentapp.controller.LichThiController"
   stylesheets="@styles.css">

   <top>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="LỊCH THI - PHÒNG ĐÀO TẠO"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>

            <HBox alignment="CENTER" spacing="10.0"
               style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
               <children>
                  <Label text="Tìm kiếm:" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                  <TextField fx:id="searchField" promptText="Nhập Mã HP, Tên HP, Lớp..."
                     prefWidth="400.0" styleClass="text-field" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </VBox>
   </top>

   <center>
      <TableView fx:id="lichThiTable" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="maHPColumn" prefWidth="100.0" text="Mã HP" />
            <TableColumn fx:id="tenHPColumn" prefWidth="250.0" text="Tên Học Phần" />
            <TableColumn fx:id="lopSVColumn" prefWidth="120.0" text="Lớp SV" />
            <TableColumn fx:id="ngayThiColumn" prefWidth="120.0" text="Ngày thi" />
            <TableColumn fx:id="gioThiColumn" prefWidth="100.0" text="Giờ thi" />
            <TableColumn fx:id="phongThiColumn" prefWidth="100.0" text="Phòng thi" />
            <TableColumn fx:id="soSVColumn" prefWidth="80.0" text="Số SV" />
            <TableColumn fx:id="htThiColumn" prefWidth="120.0" text="Hình thức" />
            <TableColumn fx:id="cbctColumn" prefWidth="200.0" text="Cán bộ coi thi" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </BorderPane.margin>
      </TableView>
   </center>

</BorderPane>