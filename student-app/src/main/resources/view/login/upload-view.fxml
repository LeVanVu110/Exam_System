<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.studentapp.controller.UploadController"
      spacing="15" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Chọn file bài thi để nộp:"/>
    <Button text="Chọn file" onAction="#chooseFile"/>
    <Label fx:id="fileLabel" text="Chưa chọn file nào"/>
    <Button text="Nộp bài" onAction="#uploadFile"/>
    <Label fx:id="statusLabel" text="Trạng thái: "/>
</VBox>