<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.studentapp.controller.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="15" prefWidth="400" prefHeight="300">
            <Label text="Đăng Nhập Hệ Thống Sinh Viên" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
            <TextField fx:id="txtEmail" promptText="Email"/>
            <PasswordField fx:id="txtPassword" promptText="Mật khẩu"/>
            <Button text="Đăng nhập" onAction="#handleLogin" prefWidth="150"/>
            <Label fx:id="lblStatus" textFill="red"/>
        </VBox>
    </children>
</AnchorPane>
